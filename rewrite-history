git filter-branch --commit-filter '
    if [ "$GIT_COMMITTER_EMAIL" = "old@email.address" ];

    then
        GIT_COMMITTER_NAME="John Doe";
        GIT_AUTHOR_NAME="John Doe";
        GIT_COMMITTER_EMAIL="email@example.com";
        GIT_AUTHOR_EMAIL="email@example.com";
        git commit-tree "$@";
    else
         git commit-tree "$@";
    fi' HEAD
