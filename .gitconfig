[color]
	ui = true
[user]
	email = dont@bzzr.me
	name = Igor
[core]
	editor = vim
[push]
	default = simple
[alias]
	aa = "!git add -A && git ss"
	c = commit
	cm = commit -m
	ca = commit --amend
	s = status
	ss = status --short --branch
	d = diff
	ds = diff --staged
	ru = remote update --prune
	ph = push origin HEAD
	p = push
	lg = log --pretty=oneline --graph --abbrev-commit
	cb = checkout -b
	ch = checkout
	cf = clang-format
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge --skip -- %f
	process = git-lfs filter-process --skip
	required = true
[pull]
	rebase = false
[include]
	path = ~/.gitconfig-platform
